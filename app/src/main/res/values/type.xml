<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Typography-->

    <!--Article Content-->
    <style name="Newsster.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/newssterPrimaryTextColor</item>
    </style>

    <!--Article Author-->
    <style name="Newsster.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/work_sans</item>
    </style>

    <!--Article Title-->
    <style name="Newsster.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textColor">@color/newssterPrimaryTextColor</item>
    </style>

    <!--Article Description-->
    <style name="Newsster.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/newssterPrimaryTextColor</item>
    </style>

    <!--Article Source, Article Date, Source in Article Item-->
    <style name="Newsster.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/newssterSecondaryColor</item>
    </style>

    <!--Title in Article Item -->
    <style name="Newsster.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

    <!-- Dialog Title -->
    <style name="Newsster.Dialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/newssterBlackTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Dialog Body -->
    <style name="NewssterDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/newssterPrimaryTextColor</item>
    </style>

    <!-- TextButton in Article. Styled text only, so it matches article content, but behaves like a button -->
    <style name="Newsster.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/newssterSecondaryColor</item>
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.03125</item>
    </style>

    <!-- Toolbar Title -->
    <style name="NewssterToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>
</resources>